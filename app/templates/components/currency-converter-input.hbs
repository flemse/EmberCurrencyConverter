<div class="form-group">
  <div class="dropdown dropdown-scroll btn-block dropdown-small {{if openDropdown 'open'}}">
    <button class="btn btn-default dropdown-toggle btn-block" data-toggle="dropdown" {{action "toggle"}}>
      <img src="assets/images/blank.png" class="sprite {{selected.code}}_lille"/>
      {{selected.code}}: {{selected.rate}}<span class="caret"></span>
    </button>
    <ul class="dropdown-menu btn-block" role="menu" aria-labelledby="dropdownMenu1">
      <li role="presentation">
        <div class="input-group input-group-sm search-control">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-search"></span>
          </span>
          <input type="text" class="form-control" placeholder="Search..." ng-model="vm.query"/>
        </div>
      </li>
      {{#each rates as |rate|}}
        <li role="presentation">
          <a href="" class="dropdown-small">
            <img src="/assets/images/blank.png" class="sprite {{rate.code}}_lille"/>
            {{rate.code}}: {{rate.rate}}
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="form-group">
  {{input
    type="text"
    class="form-control"
    aria-label="..."
    value=selected.code
    tabindex=tabIndex}}
</div>
